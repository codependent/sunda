extends layout

block content
	div(id="todo-list", class="row")
	
		div(class="leftLayer col-sm-4")
			div(class="container")
				h1=title
				div(id="routeList")
					div(class="row", ng-repeat="call in calls") 
						div(class="col-sm-12")
							a(href="#" ng-click="select(call)") {{call.method}} - {{call.path}}
							
		div(class="rightLayer col-sm-8") 
			input(type="text" ng-model="callForm.path") 
			select(ng-model="callForm.method")
				option(value="GET") GET
				option(value="POST") POST
				option(value="PUT") PUT
				option(value="DELETE") DELETE
			b
				button(class="btn btn-success", type="button", ng-show="callForm.id == null", ng-click="save()") Save
				button(class="btn btn-success", type="button", ng-show="callForm.id != null", ng-click="update()") Update 
				button(class="btn btn-warning", type="button", ng-show="callForm.id != null", ng-click="cancelEdit()") Cancel 
				button(class="btn btn-danger" , type="button", ng-show="callForm.id != null", ng-click="remove()") Delete
			